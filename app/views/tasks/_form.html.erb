<%= form_for task, html: { :class => "form-group" } do |f| %>
  <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, :class => "form-control" %>
  <%= f.label :description%>
  <%= f.text_field :description, :class => "form-control" %>
  </div>
  <%= f.submit 'create', :class=>"btn btn-primary "%>
<% end %>
